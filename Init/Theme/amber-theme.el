;;===========================================================================
;;
;;  amber-theme.el
;;
;;  Emacs theme: amber
;;
;;===========================================================================



;============================================================================
;  Inheritance
;----------------------------------------------------------------------------
(eval-and-compile
  (require 'theme-base))
;____________________________________________________________________________



;============================================================================
;  Initialization
;----------------------------------------------------------------------------
(deftheme amber
  "Emacs theme: amber")
;____________________________________________________________________________



;============================================================================
;  Definition
;----------------------------------------------------------------------------
;  Initialize internal associations
(custom-theme-default-init-map 'amber)

;  Define and set colors
(let
  ;--------------------------------------------------------------------------
  ;  Variables
  ;--------------------------------------------------------------------------
  (
    ;  Greys and terminals
    (c-00  "#000000") ; Black
    (c-01  "#0C0C0C") ; Grey 0
    (c-02  "#1F1F1F") ; Grey 1
    (c-03  "#2F2F2F") ; Grey 2
    (c-04  "#3C3C3C") ; Grey 3
    ;(c-05 "#494949") ; Grey 4
    (c-06  "#535353") ; Grey 5
    (c-07  "#636363") ; Grey 6
    ;(c-08 "#767676") ; Grey 7
    (c-09  "#868686") ; Grey 8
    (c-0A  "#939393") ; Grey 9
    (c-0B  "#A3A3A3") ; Grey A
    ;(c-10 "#B3B3B3") ; Grey B
    (c-11  "#C6C6C6") ; Grey C
    ;(c-12 "#D6D6D6") ; Grey D
    (c-13  "#E6D6D6") ; Grey E
    ;(c-14 "#F3F3F3") ; Grey F
    (c-15  "#FFFFFF") ; White

    ;  Hues
    (c-16  "#700000") ; Red (dark)
    (c-17  "#933C6C") ; Red (moderate)
    (c-18  "#D00030") ; Red (bright)
    (c-19  "#A08000") ; Gold (pale)
    (c-1A  "#C0A020") ; Gold
    (c-1B  "#DF9F8F") ; Salmon          ; #BFAF8F
    (c-20  "#304010") ; Green (dark)
    (c-21  "#5C8333") ; Green
    (c-22  "#304060") ; Blue (dark)
    (c-23  "#964676") ; Violet
    (c-24  "#736363") ; Amber (dim)
    (c-25  "#967646") ; Amber (dark)
    (c-26  "#968676") ; Amber (medium)
    (c-27  "#A34313") ; Amber (saturated)
    (c-28  "#DCCC96") ; Amber (bright)
    (c-29  "#934300") ; Amber (saturated, mild)
    (c-2A  "#F3A323") ; Amber (bright)
    (c-2B  "#6090C0") ; Indigo
    (c-30  "#9060C0") ; Magenta
    (c-31  "#467696") ; Blue
  )

  ;--------------------------------------------------------------------------
  ;  Engage custom-theme-set-faces
  ;--------------------------------------------------------------------------
  (apply
    'custom-theme-set-faces
    'amber
    (custom-theme-construct-faces
      '((class color) (min-colors 89))
      (custom-theme-default-color-map)
    )
  )
)
;____________________________________________________________________________



;============================================================================
;  Provide theme
;----------------------------------------------------------------------------
(provide-theme 'amber)
(provide       'amber-theme)
;____________________________________________________________________________



